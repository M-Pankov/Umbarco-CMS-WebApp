@using Umbraco.Cms.Core.Models.Blocks;

@inherits UmbracoViewPage<BlockListItem>

@{
    var row = (ImageRow)Model.Content;
	var settings = (ImageRowSettings)Model.Settings;
	if (settings?.Hide ?? false) return;
	if(row.Image == null) return;
}
	<header class="text-center mb-3">
		<h3>@row.Title</h3>
	</header>
<div class="row gx-4 gx-lg-5 my-5 justify-content-center">

	<div class="col-md-10 col-lg-8 col-xl-7">
	@if(row.Link != null)
		{
			@:<a href="@row.Link.Url" target="@row.Link.Target" title="@row.Link.Name">
		}
		<img class="img-fluid" src="@row.Image.Url()" >
		<span class="caption text-muted">@row.Description</span>
	@if(row.Link != null)
		{
			  @:</a>
		}
		</div>

	<p class="caption text-center">@row.Text</p>
</div>